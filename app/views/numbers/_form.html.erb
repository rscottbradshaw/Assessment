<%= form_for @number do |f| %>

  <% if @number.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@number.errors.count, "error") %> prohibited
        this number from being saved:
      </h2>
      <ul>
        <% @number.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :please_enter_number_between_1_and_10 %><br>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

 
